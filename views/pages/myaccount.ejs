<body class="BodyAccount">
    <header>
        <ul>
            <li>
                <button onclick=""><img src="./images/Heart.svg" alt=""></a></button>
            </li>
            <li>
                <button onclick=""><img src="./images/Profile.svg" alt=""></a></button>
            </li>
        </ul>
    </header>
    <main class="account-wrapper">
        <h1>Welkom, <%= user.username %></h1>
      
        <img src="<%= user.avatar %>" width="115px" class="BodyAvatar">

        <form class="FormAvatar" id="uploadpicture" action="/myaccount" method="POST" enctype="multipart/form-data"> 
            <label>Wijzig jouw profielfoto:</label>
            <input type="file" name="avatar" accept="image/*">
       <input type="submit" value="Voeg toe">
       </form>

        <section class="account-box">

            <h3> Gebruikersnaam: </h3>
                <div class="account-input-box">
                    <p> <%= user.username %> </p>
                    <button onclick="location.href = 'update_username';">Wijzig </button>
                </div>

                <h3> Email: </h3>
                <div class="account-input-box">
                    <p> <%= user.email %> </p>
                    <button onclick="location.href = 'update_email';">Wijzig</button>
                </div>

                <button class="AccountPasswordButton " onclick="location.href = 'update_password';">Wachtwoord wijzigen</button>
        </section>
        
        <section class="account-box">
        <form id="logoutbutton" action="/logout" method="GET"> 
            <button> Log uit </button>
         </form>

         <button onclick="location.href = 'delete_account';">Verwijder account</button>

         </section>

    </main>
</body>

</html>